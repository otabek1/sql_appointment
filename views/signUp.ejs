<%- include("header"); -%>

    <link rel="stylesheet" href="/css/signUp.css">
    </head>

    <!-- Sign Up page with title and email and password field  -->

    <body>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="text-center">Sign Up</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <form action="/signUp" method="post" id="signUp-form">
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" id="email" name="email"
                                aria-describedby="emailHelp" required placeholder="Enter email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password"
                                placeholder="Password" required minlength="6">
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Confirm Password</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                                required minlength="6" placeholder="Confirm Password">
                            <!-- passwords do not match text in red -->
                            <small id="passwordsMatch" class="form-text text-danger text-lg"></small>
                        </div>
                        <button type="" class="btn btn-primary mt-4 submit-form">Register</button>

                    </form>
                </div>
            </div>
            <!-- if you already have an account sign in text -->
            <br>
            <div class="row">
                <div class="col-12">
                    <p class="">Already have an account? <a href="/signIn">Sign In</a></p>
                </div>
            </div>
            <script src="/scripts/signUp.js"></script>
    </body>