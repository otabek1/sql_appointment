    <body>

        <!-- Sign in page with email and password -->
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="text-center">Sign In</h1>
                </div>
                
            </div>
            <div class="row">
                <div class="col-12">
                    <form action="/signIn" method="post" id="signIn-form">
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" id="email" name="email"
                                aria-describedby="emailHelp" required placeholder="Enter email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password"
                                placeholder="Password" required minlength="6">
                        </div>
                        <button type="" class="btn btn-primary mt-4 submit-form">Log In</button>
                    </form>
                </div>
            </div>
